{
  "expo": {
    "name": "Jarvis",
    "slug": "jarvis",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.svg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.svg",
      "resizeMode": "contain",
      "backgroundColor": "#0B0F1A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jarvis.app"
    },
    "android": {
      "permissions": [
        "RECORD_AUDIO",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH",
        "FOREGROUND_SERVICE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.svg",
        "backgroundColor": "#0B0F1A"
      },
      "package": "com.jarvis.app"
    },
    "web": {
      "favicon": "./assets/favicon.svg"
    }
  }
}
